<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dtphat.slangdictionary.controller.AddController">
    <children>
        <Label text="Thêm Slang Word Mới">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label text="Slang Word:" />
        <TextField fx:id="slangField" maxWidth="300.0" promptText="Ví dụ: AFK" />

        <Label text="Definition (Ý nghĩa):" />
        <TextField fx:id="definitionField" maxWidth="300.0" promptText="Ví dụ: Away From Keyboard" />

        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" text="Thêm Slang Word" />

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
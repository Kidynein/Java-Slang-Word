<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dtphat.slangdictionary.controller.WelcomeController">
    <children>
        <Label text="Chào mừng bạn đến với Từ điển Slang Word">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Sử dụng menu bên trên để chọn các chức năng." />

        <Separator prefWidth="200.0" />

        <Label text="Slang của hôm nay:">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label fx:id="slangLabel" text="[SLANG WORD]">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label fx:id="definitionLabel" text="[Definition of slang]" textAlignment="CENTER" wrapText="true" />

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
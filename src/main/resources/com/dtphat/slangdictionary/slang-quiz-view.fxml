<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dtphat.slangdictionary.controller.SlangQuizController">
    <children>
        <Label text="Đố Vui: Slang -> Definition">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Slang Word sau đây có nghĩa là gì?">
            <font>
                <Font size = "18.0"/>
            </font>
        </Label>

        <Label fx:id="questionLabel" text="[SLANG WORD]" textFill="#007bff">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <Separator prefWidth="200.0" />
        <Label text="Chọn 1 trong 4 đáp án:" />

        <Button fx:id="optionButton1" onAction="#handleOption1" prefWidth="400.0" text="Option 1" />
        <Button fx:id="optionButton2" onAction="#handleOption2" prefWidth="400.0" text="Option 2" />
        <Button fx:id="optionButton3" onAction="#handleOption3" prefWidth="400.0" text="Option 3" />
        <Button fx:id="optionButton4" onAction="#handleOption4" prefWidth="400.0" text="Option 4" />

        <Separator prefWidth="200.0" />

        <Label fx:id="feedbackLabel" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextButton" text="Câu hỏi tiếp theo" />

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>